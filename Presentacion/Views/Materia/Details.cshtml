@model CE.Entidades.Materia
@{
    ViewBag.Title = "Details";
    ViewBag.Nombre = ViewBag.nom;
    ViewBag.ApellidoPaterno = ViewBag.ape;
    Layout = "~/Views/Shared/BaseIndex.cshtml";
}

    <div class="form-group">
        <input type="text" class="form-control form-control-user" id="nombre" value="@Model.Nombre_Materia" name="nombre"
               placeholder="Nombre" readonly>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input type="text" class="form-control form-control-user" id="apePaterno" value="@Model.Costo_Materia" name="costo"
                   placeholder="Costo" readonly>
        </div>        
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-user" id="usuario" value="@Model.ID_Materia" hidden name="id_materia"
               placeholder="ID_Materia" readonly>
    </div>
    <hr>
   
    <a class="btn btn-primary btn-user btn-block" href="/Materia/Index"> Regresar</a>


