@{ 
    Layout = "../Shared/BasePrincipal.cshtml";
    ViewBag.Title = "Iniciar Sesión";
}

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">!Hola, Bienvenido!</h1>
                                    </div>            
                                    <p style="color:forestgreen">@ViewBag.Exito</p>
                                    <p style="color:red;"><b>@ViewBag.ErrorLogin</b></p>
                                    <form class="user" action="/Login/Login" method="post">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                   id="usario" name="usuario" aria-describedby="emailHelp"
                                                   placeholder="Usuario..." required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="password" name="password" placeholder="Contraseña" required>
                                        </div>      
                                        <center><p style="color:red; font-size:1rem">@ViewBag.Error</p></center>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Iniciar Sesión
                                        </button>
                                        <hr>                                       
                                    </form>
                                    <hr>                                 
                                    <div class="text-center">
                                        <a class="small" href="/Registro/Create">¿No te has registrado?, da click aquí.</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</body>
<script>
    if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
    }
</script>